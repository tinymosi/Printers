@model IEnumerable<Printers.ViewModels.Models.PrinterModelView>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PrinterBrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrinterModel)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrinterBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrinterModel)
            </td>
            <td class="text-right">
                <div class="btn-group" role="group" aria-label="...">
                    <a class="btn btn-info btn-sm" @Html.ActionLink("Изменить", "CreateModel", new { id = item.ID })
                    <a class="btn btn-danger btn-sm" @Html.ActionLink("Удалить", "DeleteModel", new { id = item.ID })
                </div>
            </td>
        </tr>
    }

</table>
